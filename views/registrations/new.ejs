<h1>Register</h1>
<% if(locals.message) { %>
  <p><%= message %></p>
<% } %>
  <div class="row">
    <form class="col s12" method="POST" action="/register">
      <div class="row">
        <div class="input-field col s6">
          <i class="material-icons prefix">account_circle</i>
          <input id="username icon_prefix" class="validate" type="text" name="username">
          <label for="username icon_prefix">Username</label>
        </div>
        <div class="input-field col s6">
          <i class="material-icons prefix">email</i>
          <input id="email icon_prefix" type="text" name="email" class="validate">
          <label for="email icon_prefix">Email</label>
        </div>
        <div class="input-field col s6">
          <i class="material-icons prefix">lock</i>
          <input id="password icon_prefix" name="password" type="password" class="validate">
          <label for="password icon_prefix">Password</label>
        </div>
        <div class="input-field col s6">
          <i class="material-icons prefix">lock</i>
          <input id="passwordConfirmation icon_prefix" name="passwordConfirmation" type="password" class="validate">
          <label for="passwordConfirmation icon_prefix">Confirm Password</label>
        </div>
        <div class="input-field col s6">
          <button class="btn-large waves-effect waves-light green">Register</button>
        </div>
      </div>
    </form>
  </div>
<%# class="form-control"%>
